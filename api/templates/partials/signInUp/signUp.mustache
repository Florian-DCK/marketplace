<form action="../../../api/controllers/inscriptionControllers.php" method="POST" enctype="multipart/form-data" name="inscription" class="flex flex-col items-center w-full max-w-6xl bg-white rounded-2xl shadow-2xl p-8">
    <div class="mb-4 text-center col-span-full">
        <h2 class="font-bold text-3xl text-[#5242AE] mb-1">Sign Up</h2>
        <p class="text-gray-500 text-base">Create your account</p>
    </div>
