        <div class="w-full">
            <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name *</label>
            <div class="relative">
                <input  type="text" 
                        name="firstName" 
                        id="firstName" 
                        placeholder="First name" 
                        required
                        class="p-3 pl-10 rounded-lg bg-[#EAEBED] w-full h-12 text-sm border border-transparent text-[#5242AE] focus:outline-none focus:border-[#8d54b1] shadow" />
                <svg fill="none" stroke="#9F9F9F" viewBox="0 0 24 24"
                    class="absolute left-2 top-1/2 -translate-y-1/2 w-5 h-5 pointer-events-none">
                    <circle cx="12" cy="8" r="4"/>
                    <path d="M4 20c0-4 8-4 8-4s8 0 8 4"/>
                </svg>
            </div>
        </div>
        <div class="w-full">
            <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name *</label>
            <div class="relative">
                <input  type="text" 
                        name="lastName" 
                        id="lastName" 
                        placeholder="Last name" 
                        required
                        class="p-3 pl-10 rounded-lg bg-[#EAEBED] w-full h-12 text-sm border border-transparent text-[#5242AE] focus:outline-none focus:border-[#8d54b1] shadow" />
                <svg fill="none" stroke="#9F9F9F" viewBox="0 0 24 24"
                    class="absolute left-2 top-1/2 -translate-y-1/2 w-5 h-5 pointer-events-none">
                    <circle cx="12" cy="8" r="4"/>
                    <path d="M4 20c0-4 8-4 8-4s8 0 8 4"/>
                </svg>
            </div>
        </div>
        <div class="w-full">
            <label for="birthDate" class="block text-sm font-medium text-gray-700 mb-1">Birthdate *</label>
            <div class="relative">
                <input  type="date" 
                        name="birthDate" 
                        id="birthDate" 
                        required
                        class="p-3 pl-8 rounded-lg bg-[#EAEBED] w-full h-12 text-sm border border-transparent text-[#5242AE]/50 focus:outline-none focus:border-[#8d54b1] shadow" />
                <svg fill="none" stroke="#9F9F9F" viewBox="0 0 24 24"
                    class="absolute left-2 top-1/2 -translate-y-1/2 w-5 h-5 pointer-events-none">
                    <rect x="3" y="4" width="18" height="18" rx="2"/>
                    <path d="M16 2v4M8 2v4M3 10h18"/>
                </svg>
            </div>
        </div>
