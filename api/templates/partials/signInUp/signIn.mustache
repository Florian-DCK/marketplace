        <div class="relative">
            <input
                type="password"
                name="password"
                id="password"
                placeholder="Your password"
                required
                class="p-3 pl-10 rounded-lg bg-[#EAEBED] w-full border border-transparent text-[#5242AE] focus:outline-none focus:border-[#8d54b1] shadow"
            />
            <svg width="20" height="20" fill="#9F9F9F" viewBox="0 0 128 128"
