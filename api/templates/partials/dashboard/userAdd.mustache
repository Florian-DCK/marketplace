<main class="bg-white w-full h-full rounded-tl-xl p-5">
    <form action="POST" class="grid grid-cols-2 gap-4 [&_input:disabled]:bg-gray-200 [&_input:disabled]:text-gray-400">
        <div class="form-group">
            <label for="lastName">Nom</label>
            <input type="text" id="last_name" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="firstName">Prénom</label>
            <input type="text" id="first_name" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="phone_number">Téléphone</label>
            <input type="tel" id="phone_number" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="avatar">Avatar</label>
            <input type="text" id="avatar" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="birthDate">Date de naissance</label>
            <input type="text" id="birthDate" value="" class="border p-2 w-full rounded">
        </div>
        
        <div class="form-group">
            <label for="creationDate">Date de création</label>
            <input type="text" id="creationDate" value="" class="border p-2 w-full rounded" >
        </div>
        
        <div class="form-group">
            <label for="lastModified">Dernière modification</label>
            <input type="text" id="lastModified" value="" class="border p-2 w-full rounded" >
        </div>
        
        <div class="form-group">
            <label for="operatorLevel">Niveau d'opérateur</label>
            <input type="text" id="operatorLevel" value="" class="border p-2 w-full rounded">
        </div>
    </form>

</main>