
    <main class="w-full max-w-2xl mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden flex-1 flex flex-col justify-center items-center p-8 my-8 space-y-8">
        <div>
            <h1 class="text-3xl md:text-4xl font-bold text-[#5242AE]">
                Admin Categories management
            </h1>
        </div>
        <div class="bg-white w-full h-full rounded-tl-xl p-5">
            <h2 class="text-xl font-bold text-[#5242AE] mb-4 bg-[#EAEBED] rounded-t-xl px-4 py-2">âž• Add Category</h2>
            <form method="POST" class="flex gap-4">
                <input  type="text" 
                        name="addCategory" 
                        placeholder="Add a new category" 
                        class="border border-gray-300 p-2 flex-1 rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700">Add category</button>
            </form>
            <form method="POST" class="space-y-4 mt-6">
                <select id="deleteCategory" name="deleteCategory" class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                    {{#categories}}
                    <option value="{{id}}">{{name}}</option>
                    {{/categories}}
                </select>
                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 cursor-pointer">Delete category</button>
            </form>
        </div>
    </main>
