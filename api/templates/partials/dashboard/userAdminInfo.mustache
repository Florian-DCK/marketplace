
    <div class="w-full max-w-2xl mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden flex-1 flex flex-col justify-center items-center p-8 my-8">
        <div>
            <h1 class="text-3xl md:text-4xl font-bold text-[#5242AE] mb-6">
                Admin User Info
            </h1>
        </div>

        <!-- Search Form -->
        <form action="/dashboard/admin" method="GET" class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
                <label for="userEmail" class="block mb-1 font-semibold text-[#5242AE]">User email</label>
                <input type="text" name="userEmail" id="userEmail" value="{{user.email}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div class="flex items-end">
                <input type="hidden" name="page" value="userInfos">
                <button type="submit"
                    class="w-full py-3 rounded-full bg-[#5242AE] text-white font-semibold text-lg hover:bg-[#8d54b1] transition-all shadow-lg">
                    Search
                </button>
            </div>
            <hr class="border-gray-300 col-span-full" />
        </form>

        <!-- Edit User Form -->
        <form method="POST"
            class="grid grid-cols-1 md:grid-cols-2 gap-6 [&_input:disabled]:bg-gray-200 [&_input:disabled]:text-gray-400">
            <div>
                <label for="last_name" class="block mb-1 font-semibold text-[#5242AE]">Last Name</label>
                <input type="text" id="last_name" name="lastName" value="{{user.lastName}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="first_name" class="block mb-1 font-semibold text-[#5242AE]">First Name</label>
                <input type="text" id="first_name" name="firstName" value="{{user.firstName}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="password" class="block mb-1 font-semibold text-[#5242AE]">Password</label>
                <input type="password" id="password" name="password" value="{{user.password}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="email" class="block mb-1 font-semibold text-[#5242AE]">Email</label>
                <input type="email" id="email" name="email" value="{{user.email}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="phone_number" class="block mb-1 font-semibold text-[#5242AE]">Phone</label>
                <input type="tel" id="phone_number" name="phoneNumber" value="{{user.phoneNumber}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="avatar" class="block mb-1 font-semibold text-[#5242AE]">Avatar</label>
                <input type="text" id="avatar" name="avatar" value="{{user.avatar}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition" />
            </div>
            <div>
                <label for="birthDate" class="block mb-1 font-semibold text-[#5242AE]">Birth Date</label>
                <input disabled type="text" id="birthDate" value="{{user.birthDate}}"
                    class="border border-gray-300 p-2 w-full rounded-lg bg-gray-100 text-gray-400" />
            </div>
            <div>
                <label for="creationDate" class="block mb-1 font-semibold text-[#5242AE]">Creation Date</label>
                <input disabled type="text" id="creationDate" value="{{user.creationDate}}"
                    class="border border-gray-300 p-2 w-full rounded-lg bg-gray-100 text-gray-400" />
            </div>
            <div>
                <label for="lastModified" class="block mb-1 font-semibold text-[#5242AE]">Last Modified</label>
                <input disabled type="text" id="lastModified" value="{{user.lastModified}}"
                    class="border border-gray-300 p-2 w-full rounded-lg bg-gray-100 text-gray-400" />
            </div>
            <div>
                <label for="operatorLevel" class="block mb-1 font-semibold text-[#5242AE]">Operator Level</label>
                <select id="operatorLevel" name="operatorLevel"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1] transition">
                    <option value="user" {{#isUser}}selected{{/isUser}}>User</option>
                    <option value="administrator" {{#isAdmin}}selected{{/isAdmin}}>Administrator</option>
                </select>
            </div>
            <div class="col-span-full flex justify-end mt-4">
                <button type="submit"
                    class="w-full py-3 rounded-full bg-[#5242AE] text-white font-semibold text-lg hover:bg-[#8d54b1] transition-all shadow-lg mt-2">
                    Update
                </button>
            </div>
        </form>
    </div>
