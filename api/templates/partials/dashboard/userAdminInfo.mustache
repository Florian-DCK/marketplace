<main class="w-full max-w-2xl mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden flex-1 flex flex-col justify-center items-center p-8 my-8 space-y-8">
    <div>
        <h1 class="text-3xl md:text-4xl font-bold text-[#5242AE]">
            Admin User Info
        </h1>
    </div>
    <div class="bg-white w-full h-full rounded-tl-xl p-5">
        
        <h2 class="text-xl font-bold text-[#5242AE] mb-4 bg-[#EAEBED] rounded-t-xl px-4 py-2">üîç Search User</h2>
        <form action="/dashboard/admin" method="GET" class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
                <label for="userEmail" class="block mb-1 font-semibold text-[#5242AE]">User email</label>
                <input type="text" name="userEmail" id="userEmail" value="{{user.email}}"
                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]" />
            </div>
            <div class="flex items-end">
                <input type="hidden" name="page" value="userInfos">
                <button type="submit"
                    class="w-full py-3 rounded-full bg-[#5242AE] text-white font-semibold text-lg hover:bg-[#8d54b1] transition-all shadow-lg">
                    Search
                </button>
            </div>
            
        </form>
        
        <form method="POST" class="">
            <input type="hidden" name="deleteUser" value="{{user.email}}">
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 cursor-pointer">Delete user</button>
        </form>
        {{#successMessage}}
            <div class="text-green-600 text-center text-xl font-semibold my-4">{{successMessage}}</div>
        {{/successMessage}}
        {{#errorMessages}}
            <div class="text-red-600 text-center text-xl font-semibold my-4">
                {{.}}
            </div>
        {{/errorMessages}}
        <form method="POST" enctype="multipart/form-data" class="grid grid-cols-2 gap-4 mt-6">
            <input type="hidden" name="modifierUser" value="{{user.email}}">
                <div>
                    <label for="last_name" class="block mb-1 font-semibold text-[#5242AE]">Last name</label>
                    <input  type="text" 
                            id="last_name" 
                            name="surname" 
                            value="{{user.lastName}}" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="first_name" class="block mb-1 font-semibold text-[#5242AE]">First name</label>
                    <input  type="text" 
                            id="first_name" 
                            name="firstName" 
                            value="{{user.firstName}}" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="password" class="block mb-1 font-semibold text-[#5242AE]">Password</label>
                    <input  type="password" 
                            id="password" 
                            name="password" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="confirmPassword" class="block mb-1 font-semibold text-[#5242AE]">Confirm Password</label>
                    <input  type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="email" class="block mb-1 font-semibold text-[#5242AE]">Email</label>
                    <input  type="email"
                            id="email"
                            name="email" 
                            value="{{user.email}}" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="phone" class="block mb-1 font-semibold text-[#5242AE]">Phone</label>
                    <input  type="tel" 
                            id="phone" 
                            name="phone" 
                            value="{{user.phoneNumber}}" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="avatar" class="block mb-1 font-semibold text-[#5242AE]">Avatar</label>
                    <input  type="file" 
                            id="avatar" 
                            name="avatar" 
                            class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="birthDate" class="block mb-1 font-semibold text-[#5242AE]">Birth date</label>
                    <input disabled type="text" 
                                    id="birthDate" 
                                    value="{{user.birthDate}}" 
                                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="creationDate" class="block mb-1 font-semibold text-[#5242AE]">Creation date</label>
                    <input disabled type="text" 
                                    id="creationDate" 
                                    value="{{user.creationDate}}" 
                                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
                <div>
                    <label for="lastModified" class="block mb-1 font-semibold text-[#5242AE]">Last modified</label>
                    <input disabled type="text" 
                                    id="lastModified" 
                                    value="{{user.lastModified}}" 
                                    class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                </div>
            <div>
                <label for="operatorLevel" class="block mb-1 font-semibold text-[#5242AE]">Operator level</label>
                <select id="operatorLevel" name="operatorLevel" class="border border-gray-300 p-2 w-full rounded-lg focus:ring-2 focus:ring-[#8d54b1]">
                    <option value="user" {{#user.isUser}}selected{{/user.isUser}}>User</option>
                    <option value="administrator" {{#user.isAdmin}}selected{{/user.isAdmin}}>Administrator</option>
                </select>
            </div>
                <div class="col-span-2">
                    <button type="submit" class="w-full bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Modify user</button>
                </div>
            </form>
            </div>
        </form>
    </div>
</main>