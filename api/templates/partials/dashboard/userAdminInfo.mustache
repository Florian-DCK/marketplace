<main class="bg-white w-full h-full rounded-tl-xl p-5">

    <!-- 🔍 Formulaire de recherche d'utilisateur -->
    <form action="/dashboard/admin" method="GET" class="grid grid-cols-2 gap-4">
        <div class="form-group">
            <label for="userEmail">User email:</label>
            <input type="text" name="userEmail" id="userEmail" value="{{user.email}}" class="border p-2 w-full rounded">
        </div>
        <div class="form-group flex items-end">
            <input type="hidden" name="page" value="userInfos">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Search</button>
        </div>
    </form> 

    <!-- ❌ Supprimer utilisateur -->
    <form method="POST" class="mt-4">
        <input type="hidden" name="deleteUser" value="{{user.email}}">
        <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Delete user</button>
    </form>

    <!-- ✅ Modifier utilisateur (tous les champs dans le même formulaire) -->
    <form method="POST" enctype="multipart/form-data" class="grid grid-cols-2 gap-4 mt-6">
        <input type="hidden" name="modifierUser" value="{{user.email}}">

        <div class="form-group">
            <label for="last_name">Last name</label>
            <input type="text" id="last_name" name="surname" value="{{user.lastName}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="first_name">First name</label>
            <input type="text" id="first_name" name="firstName" value="{{user.firstName}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" value="{{user.email}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="phone_number">Phone</label>
            <input type="tel" name="phone" id="phone_number" value="{{user.phoneNumber}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="avatar">Avatar</label>
            <input type="file" name="avatar" id="avatar" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="birthDate">Birth date</label>
            <input disabled type="text" id="birthDate" value="{{user.birthDate}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="creationDate">Creation date</label>
            <input disabled type="text" id="creationDate" value="{{user.creationDate}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="lastModified">Last modified</label>
            <input disabled type="text" id="lastModified" value="{{user.lastModified}}" class="border p-2 w-full rounded">
        </div>

        <div class="form-group">
            <label for="operatorLevel">Operator level</label>
            <select id="operatorLevel" name="operatorLevel" class="border p-2 w-full rounded">
                <option value="user" {{#isUser}}selected{{/isUser}}>User</option>
                <option value="administrator" {{#isAdmin}}selected{{/isAdmin}}>Administrator</option>
            </select>
        </div>

        <div class="form-group col-span-2">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Modify user</button>
        </div>
    </form>

    <!-- ➕ Ajouter une catégorie -->
    <form method="POST" class="mt-6">
        <input type="text" name="addCategory" placeholder="Add a new category" class="border p-2 w-full rounded">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add category</button>
    </form>

</main>