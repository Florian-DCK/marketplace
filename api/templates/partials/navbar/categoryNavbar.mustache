<div class="bg-[#EAEBED] w-full flex justify-center">
    <!-- Dropdown for small screens -->
    <div class="relative w-full lg:hidden flex justify-center">
        <button id="categoryDropdownBtn" class="p-2 bg-[#FFC107] text-[#303F9F] rounded mt-2 mb-2">Categories</button>
        <ul id="categoryDropdownMenu" class="absolute left-1/2 -translate-x-1/2 mt-2 bg-white border rounded shadow-lg z-10 hidden w-48">
            {{#categories}}
                <li><a href="/search?category={{name}}" class="block px-4 py-2 hover:bg-gray-200">{{name}}</a></li>
            {{/categories}}
        </ul>
    </div>
    <!-- Horizontal list for medium and up -->
    <ul class="hidden lg:flex space-x-2 items-center w-[90%] justify-center shadow-[0_10px_10px_-10px_rgba(0,0,0,0.1)] px-2 sm:px-4 md:px-8">
        {{#categories}}
            <a href="/search?category={{name}}"><li class="p-2 hover:bg-gray-200 cursor-pointer whitespace-nowrap">{{name}}</li></a>
        {{/categories}}
    </ul>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const btn = document.getElementById('categoryDropdownBtn');
    const menu = document.getElementById('categoryDropdownMenu');
    if (btn && menu) {
        btn.addEventListener('click', function() {
            menu.classList.toggle('hidden');
        });
        document.addEventListener('click', function(e) {
            if (!btn.contains(e.target) && !menu.contains(e.target)) {
                menu.classList.add('hidden');
            }
        });
    }
});
</script>